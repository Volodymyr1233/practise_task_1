<Window x:Class="Practise_task_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practise_task_1"
        mc:Ignorable="d"
        Title="Simple Calculating" Height="450" Width="578">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160*"/>
            <ColumnDefinition Width="129*"/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="num_a" HorizontalAlignment="Left" Margin="115,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="103" Height="21"/>
        <Label Content="Pierwsza liczba" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="105"/>
        <Label Content="Druga liczba" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="105"/>
        <TextBox x:Name="num_b" HorizontalAlignment="Left" Margin="115,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="103" Height="21" TextChanged="TextBox_TextChanged"/>
        <ComboBox x:Name="cmb_oper" HorizontalAlignment="Left" Height="26" Margin="18,22,0,0" VerticalAlignment="Top" Width="91" SelectionChanged="ComboBox_SelectionChanged" Grid.Column="1">
            <ComboBoxItem Content="+"/>
            <ComboBoxItem Content="-"/>
            <ComboBoxItem Content="*"/>
        </ComboBox>
        <Label Content="Operacja" HorizontalAlignment="Left" Margin="258,24,0,0" VerticalAlignment="Top" Width="105" Grid.ColumnSpan="2"/>
        <Button Content="Oblicz" HorizontalAlignment="Left" Margin="123,26,0,0" VerticalAlignment="Top" Width="120" Height="22" Click="Button_Click" Grid.Column="1"/>
        <ScrollViewer Grid.ColumnSpan="2" Margin="0,67,0,67">
            <Grid x:Name="result_grid" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="35*" />
                    <ColumnDefinition Width="35*" />
                    <ColumnDefinition Width="35*" />
                    <ColumnDefinition Width="29*"/>
                </Grid.ColumnDefinitions>


                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Pierwsza liczba" 
               FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Height="16" Width="85" />
                <TextBlock Text="Druga liczba" Grid.Column="1" 
               FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Height="16" Width="71"/>
                <TextBlock Text="Operacja" Grid.Column="2" 
               FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Height="16" Width="50"/>
                <TextBlock Text="Wynik" Grid.Column="4" 
               FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Height="16" Width="36"/>
            </Grid>
        </ScrollViewer>
        <Button Content="Serializacja" HorizontalAlignment="Left" Margin="176,372,0,0" VerticalAlignment="Top" Width="92" Click="Button_Click_1" Height="20"/>
        <Button Content="Deserializacja&#xD;&#xA;" HorizontalAlignment="Left" Margin="10,372,0,0" VerticalAlignment="Top" Width="88" Click="Button_Click_2" Height="20" Grid.Column="1"/>


    </Grid>
</Window>
